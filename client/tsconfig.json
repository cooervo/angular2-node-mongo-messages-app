{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "target": "es5",
    "types": [
       "core-js",
       "node",
       "hammerjs"
     ]
  },
  "exclude": [
    "node_modules",
    "typings/main",
    "typings/main.d.ts",
    "node_modules/@types"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  },
  "compileOnSave": false,
  "buildOnSave": false
}
